@model UserProfile

@{
    ViewData["Title"] = "J. Doe profile page";
}

<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center" style="background-color: transparent;">
    <div class="w-100 mx-auto shadow-lg p-4" style="background-color: #586a54; color: white; max-width: 1200px; border-radius: 3rem;">
        <div class="text-center mb-4">
            <img src="@Model.ImageUrl" alt="Profile Image" class="rounded-circle border border-light mb-3" style="width: 120px; height: 120px; object-fit: cover;">
            <h1 class="card-title mb-2" style="color: white;">@Model.FullName</h1>
        </div>
        <hr class="border-light mb-4 w-100" />
        <div class="row g-4">
            <div class="col-12">
                <h4 class="fw-bold mb-3 pb-2" style="border-bottom: 4px solid #dee2e6; width: 100%;">Contact</h4>
            </div>
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center pb-2 mb-2" style="border-bottom: 2px solid white; width: 100%;">
                    <span class="fw-semibold">@Html.DisplayNameFor(model => model.Email):</span>
                    <span>@Model.Email</span>
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center pb-2 mb-2" style="border-bottom: 2px solid white; width: 100%;">
                    <span class="fw-semibold">@Html.DisplayNameFor(model => model.PhoneNumber):</span>
                    <span>@Model.PhoneNumber</span>
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center pb-2 mb-2" style="border-bottom: 2px solid white; width: 100%;">
                    <span class="fw-semibold">@Html.DisplayNameFor(model => model.GitHubUrl):</span>
                    <a href="@Model.GitHubUrl" class="text-light text-decoration-underline" target="_blank">@Model.GitHubUrl</a>
                </div>
            </div>
            <div class="col-12 mt-4">
                <h6 class="fw-bold mb-2" style="font-size: 1rem;">Skilled Languages</h6>
                <div class="mt-2">
                    @foreach(string languageSkill in Model.SkilledLanguages)
                    {
                        <span class="badge rounded-pill px-3 py-2 me-2 mb-2" style="background-color: #475643; color: white; font-size: 1rem;">@languageSkill</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
